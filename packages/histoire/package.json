{
  "name": "histoire",
  "version": "0.0.0",
  "description": "A fast story book powered by Vite",
  "license": "MIT",
  "author": {
    "name": "Guillaume Chau"
  },
  "repository": {
    "url": "https://github.com/Akryum/histoire.git",
    "type": "git",
    "directory": "packages/histoire"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "histoire": "./bin.mjs"
  },
  "scripts": {
    "build": "rimraf dist && tsc -d && pnpm run build:css && node ./scripts/copy.mjs",
    "build:css": "tailwindcss -i src/client/app/style/main.css -o ./dist/style.css -c tailwind.config.cjs --postcss postcss.config.cjs",
    "watch": "concurrently \"tsc -d -w --sourceMap\" \"pnpm run build:css -- --watch\" \"node ./scripts/watchAndCopy.mjs\""
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^2.1.0",
    "@vueuse/core": "^7.5.5",
    "case": "^1.6.3",
    "chokidar": "^3.5.3",
    "floating-vue": "^2.0.0-beta.5",
    "fs-extra": "^10.0.0",
    "globby": "^13.1.1",
    "happy-dom": "^2.31.1",
    "pathe": "^0.2.0",
    "picocolors": "^1.0.0",
    "pinia": "^2.0.11",
    "sade": "^1.8.1",
    "shiki": "^0.10.0",
    "vite": "^2.7.13",
    "vite-node": "^0.2.8",
    "vue": "^3.2.30",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@iconify/vue": "^3.1.3",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.15",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "globby": "^13.1.1",
    "postcss": "^8.2.4",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.5"
  }
}
